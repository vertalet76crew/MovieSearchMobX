{
    "compilerOptions": {
        "outDir": "./build/",
//        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,    
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmit": true,
        "noFallthroughCasesInSwitch": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "public", 
        "envs.js", 
        "**/*.ts",
        "**/*.tsx",
        "**/**/*.ts",
        "**/**/*.tsx"
    ]
}
